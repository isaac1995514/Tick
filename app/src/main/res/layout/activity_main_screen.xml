<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.umd.cs.expandedalarm.MainScreen.MainScreen">

    <RelativeLayout
        android:id="@+id/Label"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/tick"
        >


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@color/light_blue"
        >

        <at.markushi.ui.CircleButton
            android:id="@+id/weather_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:cb_color="@color/blue"
            app:cb_pressedRingWidth="5dip"
            android:src="@drawable/sun_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weather"
            android:textColor="@color/blue"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relationship"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@color/light_pink"
        >

        <at.markushi.ui.CircleButton
            android:id="@+id/relationship_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:cb_color="@color/pink"
            app:cb_pressedRingWidth="5dip"
            android:src="@drawable/heart_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/relationship_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relationship"
            android:textColor="@color/pink"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/customize"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@color/light_orange">

        <at.markushi.ui.CircleButton
            android:id="@+id/customize_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:cb_color="@color/orange"
            app:cb_pressedRingWidth="5dip"
            android:src="@drawable/user_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/customize_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customize"
            android:textColor="@color/orange"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@color/light_gray">

        <at.markushi.ui.CircleButton
            android:id="@+id/user_setting_button"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:cb_color="@color/gray"
            app:cb_pressedRingWidth="5dip"
            android:src="@drawable/customize_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/user_setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_setting"
            android:textColor="@color/gray"
            android:textSize="50sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

    </RelativeLayout>


</LinearLayout>
